#include <ros.h>
#include <std_msgs/Int32.h>
#include <geometry_msgs/Twist.h>
//#include <MsTimer2.h>

int PWM1 = 2;
int Direction1 = 52;
int Brake1 = 53;

int PWM2 = 5;
int Direction2 = 50;
int Brake2 = 51;

int velocity;

geometry_msgs::Twist cmd_pub;

ros::NodeHandle  nh;

void cmd_vel_callback(const geometry_msgs::Twist& cmd_vel) 
{
  velocity = (int)cmd_vel.linear.x; //
//  steer_angle = (int)msg.angular.z; // steering motor

if(velocity >= 100) velocity  = 100;  // pwm
if(velocity <= -100) velocity = -100;  // pwm

}

ros::Publisher cmd_pub1("/cmd_pub", &cmd_pub);
ros::Subscriber <geometry_msgs::Twist> cmd_sub("/cmd_vel", cmd_vel_callback);

void setup()
{
  nh.initNode();
  nh.subscribe(cmd_sub);
  
  pinMode(PWM1, OUTPUT);
  pinMode(PWM2, OUTPUT);
  
  pinMode(Direction1, OUTPUT);
  pinMode(Brake2, OUTPUT);
  
  pinMode(Direction1, OUTPUT);
  pinMode(Brake2, OUTPUT);

  //Serial.begin(57600);

}

void loop()
{
  analogWrite(PWM1, velocity);
  analogWrite(PWM2, velocity);

  cmd_pub.linear.x = velocity;
  //cmd_pub1.publish(&cmd_pub);
  
  
  digitalWrite(Direction1, LOW);
  digitalWrite(Direction2, LOW);
 
  nh.spinOnce();
}
